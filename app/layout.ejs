    <div class="offcanvas-footer p-0 d-flex justify-content-between align-items-baseline">
      <div>
        <span>小計</span>
        <span>NT$1050</span>
      </div>
      <div>
        <input type="button" class="btn btn-light btn-sm" value="前往結帳">
      </div>
    </div>
  </section>

  <!-- banner -->
  <div class="banner bg-warning text-white <%if (current!='index') {%>d-none<%}%>">
    <div class="container h-100">
      <div class="row align-items-center h-100">
        <div class="col-12 col-lg-4 offset-lg-1">
          <h2 class="mb-2 fw-bold fs-1">台北當代藝術展</h2>
          <span class="d-block mb-4 fs-5 fw-bold">01 JUN - 31 OCT</span>
